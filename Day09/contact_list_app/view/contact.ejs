<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="box">
      <h1>Contact List</h1>
      <ul>
        <% for(let i of contact_list){%>
        <li>
          <p class="name"><%=i.name%></p>
          <p class="phone"><%=i.phone%></p>
          <div>
            <a href="/delete-contact/?phone=<%=i.phone%>">Delete</a>
          </div>
        </li>
        <%}%>
      </ul>
    </div>
    <div class="form">
      <form action="/add" method="post">
        <input
          class="nameInput"
          type="text"
          name="name"
          required
          placeholder="Enter Name"
        />
        <br />
        <input
          class="phoneInput"
          type="number"
          name="phone"
          placeholder="Enter Name"
          required
        />
        <br />
        <button class="btn" type="submit">Add</button>
      </form>
    </div>
  </body>
</html>
